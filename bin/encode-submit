#!/usr/bin/env bash

SPARK_HOME=/opt/mapr/spark/spark-1.2.1/
SCRIPT_DIR="$(cd `dirname $0`/..; pwd)"

# Get list of required jars for ENCODE X
ENCODE_JARS=$("$SCRIPT_DIR"/bin/compute-encode-x-jars.sh)

if [ ! -z "$ADDL_JARS" ]; then
  ENCODE_JARS="$ENCODE_JARS","$ADDL_JARS"
fi

# append ADAM_JARS to the --jars option, if any
NEW_OPTIONS=$("$SCRIPT_DIR"/bin/append_to_option.py , --jars "$ENCODE_JARS" "$@")

# Binary distribution
REPO_DIR="$SCRIPT_DIR/repo"
if [ ! -d "$REPO_DIR" ]; then
# Fallback to source directory
REPO_DIR="$SCRIPT_DIR/encodex-cli/target/appassembler/repo/"
fi

CLI_DIR="$REPO_DIR/org/encodedcc/encodex/encodex-cli"
num_versions=$(ls "$CLI_DIR" | wc -l)
if [ "$num_versions" -eq "0" ]; then
  echo "Failed to find encodex-cli jar in $CLI_DIR"
  echo "You need to build ENCODE before running this program."
  exit 1
fi
if [ "$num_versions" -gt "1" ]; then
  versions_list=$(ls "$CLI_DIR")
  echo "Found multiple ENCODE CLI versions in $CLI_DIR:"
  echo "$versions_list"
  echo "Please remove all but one."
  exit 1
fi
ENCODE_CLI_JAR=$(ls $CLI_DIR/*/encodex-cli-*.jar)

# Find spark-submit script
if [ -z "$SPARK_HOME" ]; then
  echo "SPARK_HOME must be set for 'encode-submit'"
  exit 1
else
  SPARK_SUBMIT="$SPARK_HOME"/bin/spark-submit
fi

# Split args into Spark args and ADAM args
# NOTE: if Spark uses gatherSparkSubmitOpts in spark-submit, this is unnecessary
function usage() {
  echo "encode-submit <spark-args> <encode-args>"
  exit 0
}
source "$SPARK_HOME"/bin/utils.sh
SUBMIT_USAGE_FUNCTION=usage
gatherSparkSubmitOpts $NEW_OPTIONS

# submit the job to Spark
"$SPARK_SUBMIT" \
  --class org.encodedcc.encodex.cli.EncodeReads \
  --conf spark.serializer=org.apache.spark.serializer.KryoSerializer \
  --conf spark.kryo.registrator=org.bdgenomics.adam.serialization.ADAMKryoRegistrator \
  --conf spark.kryoserializer.buffer.mb=4 \
  --conf spark.kryo.referenceTracking=true \
  ${ENCODE_OPTS:- } \
  --conf spark.executor.memory=${ENCODE_EXECUTOR_MEMORY:-"4g"} \
  --driver-memory ${ENCODE_DRIVER_MEMORY:-"4g"} \
  "${SUBMISSION_OPTS[@]}" \
  "$ENCODE_CLI_JAR" \
  "${APPLICATION_OPTS[@]}"
